<% provide(:title, "Reset Password") %>
<h1>Reset your password</h1>

<div class="row">
  <div class="span6 offset3">
    <div class="form-body">
      <%= form_tag password_resets_path, :method => :post do %>

        <%= label_tag :email %>
        <%= text_field_tag :email, params[:email] %>

        <%= submit_tag "Reset Password", class: "btn btn-block btn-primary" %>
      <% end %>

      <p>Enter your email address and you will receive an email with instructions.</p>
    </div>
  </div>
</div>
