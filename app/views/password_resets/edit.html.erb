<% provide(:title, "Recovery Password") %>
<h1>Update your password</h1>

<div class="row">
  <div class="span6 offset3">

    <%= render 'shared/error_messages', object: @user %>

    <div class="form-body">
      <%= form_for @user, :url => password_reset_path(params[:password_reset_token]) do |f| %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>

        <%= f.submit "Update Password", class: "btn btn-block btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
